<div class="container" >
  <%= render "shared/navbar-back" %>
  <div>
    <h2 class="page-title">Post Item</h2>
    <%= simple_form_for(@item, data: { controller: "generate-description"}) do |f| %>
      <%= f.input :name, placeholder:"Name" %>
      <%= f.input :photo, as: :file, placeholder:"Add photo"%>
      <button class="btn btn-primary text-white" data-action="click->generate-description#generate">Generate Description</button>
      <%= f.input :description, placeholder:"Add description", input_html: {rows: 8, data: {"generate-description-target":"description"} } %>
      <%= f.input :available_date, as: :date, html5: true %>
      <%= f.input :deadline_date, as: :date, html5: true %>
      <%= f.input :location %>
      <%= f.input :dimensions %>
      <%= f.input :weight %>
      <%= f.submit "Post Item", class: "btn btn-danger text-white" %>
    <% end %>
  </div>
</div>
